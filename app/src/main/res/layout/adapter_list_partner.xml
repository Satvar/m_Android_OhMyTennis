<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/partner_list_image"
            android:elevation="3dp"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <LinearLayout
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/partner_name"
                android:textSize="18dp"
                android:text="Bala"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profilestar1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_full_24dp"
                    android:tint="@color/orgin_tint" />

                <ImageView
                    android:id="@+id/profilestar2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_full_24dp"
                    android:tint="@color/orgin_tint" />

                <ImageView
                    android:id="@+id/profilestar3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_full_24dp"
                    android:tint="@color/orgin_tint" />

                <ImageView
                    android:id="@+id/profilestar4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_full_24dp"
                    android:tint="@color/orgin_tint" />

                <ImageView
                    android:id="@+id/profilestar5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star_full_24dp"
                    android:tint="@color/orgin_tint" />
            </LinearLayout>

            <TextView
                android:id="@+id/partner_describtion"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's."
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:background="@color/linerecyle"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


</LinearLayout>