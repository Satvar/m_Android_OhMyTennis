<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<androidx.appcompat.widget.Toolbar
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/white_tint"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="Filtre" />
</androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/login_logo_left_right"
        android:layout_marginRight="@dimen/login_logo_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="-6dp"
                android:text="Cours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
           <AutoCompleteTextView
               android:focusable="false"
               android:inputType="textNoSuggestions"
               android:id="@+id/autoCompleteTextView1"
               android:textColor="#000000"
               android:hint="Sélectionnez le cours"
               android:drawableTint="@color/orgin_tint"
               android:backgroundTint="@color/colorPrimary"
               android:drawableRight="@drawable/ic_spinner_arrow_down_black_24dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"

            android:textColor="@color/error"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/login_logo_left_right"
        android:layout_marginRight="@dimen/login_logo_left_right"                android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000000"
                android:inputType="textNoSuggestions"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="-6dp"
                android:text="Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText

                android:textColor="#000000"
                android:inputType="textEmailAddress"
                android:hint="@string/user_name_1"
                android:drawableRight="@drawable/ic_date_black_24dp"
                android:drawableTint="@color/orgin_tint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                 />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"

            android:textColor="@color/error"/>
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/login_logo_left_right"
            android:layout_marginRight="@dimen/login_logo_left_right"                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000000"

                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="-6dp"
                    android:text="Session"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.tech.cloudnausor.ohmytennis.utils.MyAutoCompleteTextView

                    android:textColor="#000000"
                    android:hint="Sélectionnez le session"
                    android:drawableTint="@color/orgin_tint"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableRight="@drawable/ic_spinner_arrow_down_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"

                android:textColor="@color/error"/>
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/login_logo_left_right"
        android:layout_marginRight="@dimen/login_logo_left_right"                android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="-6dp"
                android:textColor="#000000"

                android:text="Ville"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:textColor="#000000"
                android:inputType="textEmailAddress"
                android:hint="Ville"
                android:drawableTint="@color/orgin_tint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                 />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"

            android:textColor="@color/error"/>
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/login_logo_left_right"
            android:layout_marginRight="@dimen/login_logo_left_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="-6dp"
                    android:text="Rayon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.tech.cloudnausor.ohmytennis.utils.MyAutoCompleteTextView

                    android:textColor="#000000"
                    android:hint="Sélectionnez le rayon"
                    android:drawableTint="@color/orgin_tint"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableRight="@drawable/ic_spinner_arrow_down_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"

                android:textColor="@color/error"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/top"
        android:layout_marginLeft="@dimen/login_logo_left_right"
        android:layout_marginRight="@dimen/login_logo_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:layout_height="40dp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="30sp"
            android:textStyle="bold"
            android:textColor="@color/white_tint"
            android:text="@string/cancel"

            android:background="@drawable/cancelbutton"
            />
        <Button
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:layout_height="40dp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="30sp"
            android:textStyle="bold"
            android:textColor="@color/white_tint"
            android:text="Appliquer"

            android:background="@drawable/loginbutton"
            />

    </LinearLayout>


</RelativeLayout>