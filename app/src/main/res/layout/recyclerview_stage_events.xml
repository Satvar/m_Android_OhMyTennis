<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="5dp"
    app:contentPadding="2dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp"
    android:layout_height="wrap_content">

<LinearLayout
    android:background="@color/transparent"
    android:orientation="vertical"
    android:id="@+id/layoutfull"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/stage_event_image"
                android:scaleType="fitXY"
                android:layout_width="120dp"
                android:layout_height="120dp"
               />
            <LinearLayout
                android:id="@+id/datelayout"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/stage_event_name"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:textSize="15sp"
                    android:layout_below="@+id/stage_event_name"
                    android:id="@+id/stage_event_descrition"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/date_disable"
            android:elevation="@dimen/space_1x"
            android:layout_below="@+id/content_view"
            android:layout_alignParentEnd="true"
            android:background="@color/colorPrimary"
            android:layout_width="120dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15sp"
                android:id="@+id/stage_event_date"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="25 Dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
<!--    <View-->
<!--        android:layout_marginBottom="2dp"-->
<!--        android:background="@color/colorPrimary"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"/>-->
</LinearLayout>
</androidx.cardview.widget.CardView>
