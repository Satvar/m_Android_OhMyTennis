<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Toolbar
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white_tint"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/service_provision_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </Toolbar>
    <LinearLayout
        android:layout_margin="@dimen/login_logo_left_right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/servicecheck_1"
            android:fontFamily="@font/open_sans_semibold"
            android:buttonTint="@color/colorPrimary"
            android:text="@string/services_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/servicecheck_2"
            android:fontFamily="@font/open_sans_semibold"
            android:buttonTint="@color/colorPrimary"
            android:text="@string/services_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/servicecheck_3"
            android:fontFamily="@font/open_sans_semibold"
            android:buttonTint="@color/colorPrimary"
            android:text="@string/services_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/servicecheck_4"
            android:fontFamily="@font/open_sans_semibold"
            android:buttonTint="@color/colorPrimary"
            android:text="@string/services_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/servicecheck_5"
            android:fontFamily="@font/open_sans_semibold"
            android:buttonTint="@color/colorPrimary"
            android:text="@string/services_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/servicecheck_6"
            android:fontFamily="@font/open_sans_semibold"
            android:buttonTint="@color/colorPrimary"
            android:text="@string/services_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:visibility="gone"
            android:id="@+id/servicecheck_7"
            android:fontFamily="@font/open_sans_semibold"
            android:buttonTint="@color/colorPrimary"
            android:text="@string/services_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/login_logo_left_right"
        android:layout_marginRight="@dimen/login_logo_left_right"
        android:layout_marginBottom="@dimen/login_logo_left_right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/service_cancel"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="@color/white_tint"
            android:text="@string/cancel"
            android:fontFamily="@font/open_sans_semibold"
            android:background="@drawable/cancelbutton"
            />

        <Button
            android:id="@+id/service_ok"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="@color/white_tint"
            android:text="@string/save"
            android:fontFamily="@font/open_sans_semibold"
            android:background="@drawable/loginbutton"
            />

    </LinearLayout>
</LinearLayout>