<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="225dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="225dp"
    app:cardCornerRadius="15dp"
    android:layout_height="334dp">
            <ImageView
                android:id="@+id/profilehome"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
</androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/profilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="17dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/profilestar1"
                android:tint="@color/orgin_tint"
                android:src="@drawable/ic_star_full_24dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <ImageView
                android:id="@+id/profilestar2"
                android:tint="@color/orgin_tint"
                android:src="@drawable/ic_star_full_24dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <ImageView
                android:id="@+id/profilestar3"
                android:tint="@color/orgin_tint"
                android:src="@drawable/ic_star_full_24dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <ImageView
                android:id="@+id/profilestar4"
                android:tint="@color/orgin_tint"
                android:src="@drawable/ic_star_full_24dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <ImageView
                android:id="@+id/profilestar5"
                android:tint="@color/orgin_tint"
                android:src="@drawable/ic_star_full_24dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>