                        <!---->
                        <!--android:text="TROUVER"-->
                        <!--android:backgroundTint="@color/orgin_tint"-->
                        <!--android:layout_height="40dp" />                -->
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="15dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"

                    android:text="OH MY COACHS"
                    android:layout_height="wrap_content" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:layout_margin="5dp"
                    android:id="@+id/profileimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </androidx.recyclerview.widget.RecyclerView>

                <RelativeLayout
                    android:visibility="gone"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/moveleft"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/orgin_tint"
                        android:background="@drawable/previousarrowblack"/>
                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_alignLeft="@+id/moveleft"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--<com.tech.cloudnausor.ohmytennis.utils.CircleImageView-->
                        <!--android:layout_width="150sp"-->
                        <!--android:id="@+id/coachphoto"-->
                        <!--android:src="@drawable/bannershade"-->
                        <!--app:border_width="2dp"-->
                        <!--app:border_color="#FF000000"-->
                        <!--android:layout_height="150sp" />-->
                        <com.tech.cloudnausor.ohmytennis.utils.CircleImageView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:id="@+id/coachphoto"
                            app:highlightColor="#A5FF3B00"
                            app:strokeColor="@color/orgin_tint"
                            app:strokeWidth="3dp"/>
                        <!--<ImageButton-->
                        <!--android:layout_width="150sp"-->
                        <!--android:id="@+id/coachphoto"-->
                        <!--android:background="@drawable/register_profile_defalut"-->
                        <!--android:layout_height="150sp" />-->
                        <TextView
                            android:textColor="#000000"
                            android:layout_marginTop="5dp"
                            android:id="@+id/coachname"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:gravity="center"
                            android:layout_width="match_parent"

                            android:text="Julien"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageButton
                        android:layout_centerInParent="true"
                        android:layout_marginRight="20dp"
                        android:id="@+id/moveright"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/orgin_tint"
                        android:background="@drawable/nextarrowblack"/>
                </RelativeLayout>
                <Button
