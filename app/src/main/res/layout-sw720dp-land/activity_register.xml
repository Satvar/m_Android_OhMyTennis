<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.register.RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/login_logo_left_right"
            android:layout_marginRight="@dimen/login_logo_left_right"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="30sp"
            android:layout_gravity="center"
            android:layout_height="75sp"
            android:src="@drawable/logo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="100sp"
            android:orientation="vertical"
            android:layout_marginBottom="30sp"
            >

            <TextView
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"

                android:gravity="center"
                android:text="@string/register_tittle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="12dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:text="@string/civility"/>
                <RadioGroup
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/civi_one"
                        android:textSize="17dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="50dp"
                        android:text="@string/mrs"/>
                    <RadioButton
                        android:id="@+id/civi_two"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/mr"/>
                </RadioGroup>

            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:id="@+id/r_civi_error"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"/>
            <EditText
                android:layout_marginTop="10dp"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/user_name"
                android:drawableTint="@color/orgin_tint"
                android:id="@+id/r_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"
                android:backgroundTint="@color/orgin_tint"
                 />
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:id="@+id/r_user_name_error"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"/>
            <EditText
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:id="@+id/r_user_name_nd"
                android:drawablePadding="10dp"
                android:hint="@string/user_name_nd"
                android:drawableTint="@color/orgin_tint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orgin_tint"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"

                />
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:id="@+id/r_user_name_nd_error"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"/>

            <EditText
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:id="@+id/r_user_id"
                android:drawablePadding="10dp"
                android:hint="@string/email_id_hint"
                android:drawableTint="@color/orgin_tint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orgin_tint"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"

                />
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:id="@+id/r_user_id_error"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"/>

            <EditText
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="10dp"
                android:id="@+id/r_user_pass"
                android:hint="@string/r_password_hint"
                android:drawableTint="@color/orgin_tint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"
                android:backgroundTint="@color/orgin_tint"
                android:drawableRight="@drawable/ic__eye_black_24dp"
                 />
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:id="@+id/r_user_pass_error"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"/>

            <EditText
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/r_post_code_hint"
                android:id="@+id/r_code_portal"
                android:drawableTint="@color/orgin_tint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orgin_tint"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"

                />
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:id="@+id/r_code_portal_error"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"/>

            <EditText
                android:textColorHint="#000000"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/r_ville_hint"
                android:drawableTint="@color/orgin_tint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r_spinner"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"
                android:backgroundTint="@color/orgin_tint"
                 />
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:id="@+id/r_spinner_error"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"/>

            <EditText
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="10dp"
                android:hint="@string/mobile_hint"
                android:id="@+id/r_user_c_pass"
                android:drawableTint="@color/orgin_tint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orgin_tint"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"

                />
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/error"
                android:id="@+id/r_user_c_pass_error"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkboc_id"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"
                android:buttonTint="@color/orgin_tint"

                android:layout_marginTop="20sp"
                android:text="@string/check_boc_hint"
                android:textColorHint="#000000"
                />
            <Button
                android:layout_width="match_parent"
                android:textSize="17sp"
                android:id="@+id/r_button"
                android:layout_height="40dp"
                android:layout_marginTop="20sp"
                android:textStyle="bold"
                android:textColor="@color/white_tint"
                android:layout_marginLeft="@dimen/login_logo_left_right"
                android:layout_marginRight="@dimen/login_logo_left_right"
                android:text="@string/register_button_text"

                android:background="@drawable/loginbutton"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/login_logo_left_right"
            android:layout_marginRight="@dimen/login_logo_left_right"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="64dp"
                android:layout_marginRight="10dp"
                android:layout_height="64dp"
                android:background="@drawable/roundfacebook"
                android:stateListAnimator="@animator/anim"
                android:src="@drawable/favebookcircle"
                android:elevation="100dp"
                />
            <ImageButton
                android:layout_width="64dp"
                android:layout_marginRight="10dp"
                android:layout_height="64dp"
                android:background="@drawable/roundfacebook"
                android:stateListAnimator="@animator/anim"
                android:src="@drawable/twittercricle"
                android:elevation="100dp"
                />
            <ImageButton
                android:layout_width="64sp"
                android:layout_height="64sp"
                android:background="@drawable/roundfacebook"
                android:stateListAnimator="@animator/anim"
                android:src="@drawable/instcricle"
                android:elevation="100dp"
                />
        </LinearLayout>
        <Button
            android:visibility="gone"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/loginbutton"

            android:textSize="17sp"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:layout_marginRight="-70dp"
            android:paddingLeft="30dp"
            android:text="@string/skip"
            android:textColor="@color/white_tint"
            android:textStyle="bold" />
        <TextView
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:id="@+id/gorloginid"
            android:gravity="center"
            android:text="@string/returnback"/>
    </LinearLayout>

</ScrollView>