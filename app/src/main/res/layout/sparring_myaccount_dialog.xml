<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/login_logo_left_right"
    android:layout_marginRight="@dimen/login_logo_left_right"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="@dimen/login_logo_left_right"
        android:layout_marginRight="@dimen/login_logo_left_right"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/bottomrow"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="-6dp"
            android:text="Type of Ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.tech.cloudnausor.ohmytennis.utils.MyAutoCompleteTextView
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:hint="SÃ©lectionnez le Ranking"
            android:drawableTint="@color/orgin_tint"
            android:backgroundTint="@color/colorPrimary"
            android:drawableRight="@drawable/ic_spinner_arrow_down_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="18dp"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:inputType="textEmailAddress"
                    android:text="Relavant Document"
                    android:drawableTint="@color/orgin_tint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                     />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:src="@drawable/file_upload"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <TextView
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:text="Upload Document"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottomrow"
        android:layout_marginLeft="@dimen/login_logo_left_right"
        android:layout_marginRight="@dimen/login_logo_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:layout_height="40dp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="30sp"
            android:textStyle="bold"
            android:textColor="@color/white_tint"
            android:text="@string/cancel"
            android:background="@drawable/cancelbutton"
            />
        <Button
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textAllCaps="true"
            android:textSize="17sp"
            android:layout_height="40dp"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="30sp"
            android:textStyle="bold"
            android:textColor="@color/white_tint"
            android:text="Appliquer"

            android:background="@drawable/loginbutton"
            />

    </LinearLayout>

</LinearLayout>