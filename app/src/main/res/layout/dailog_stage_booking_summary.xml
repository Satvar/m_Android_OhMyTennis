<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/reserve_dialog_heading"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="@string/str_reserve_detail"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.CollapsingToolbarLayout>

    <LinearLayout
        android:layout_margin="15sp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Nom de l'événement"/>
            <TextView
                android:text=": "
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dialog_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Emplacement"/>
            <TextView
                android:text=": "
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dialog_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Date "/>
            <TextView
                android:text=": "
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dialog_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/discout_layout"
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Price (€) "/>
            <TextView
                android:text=": "
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:backgroundTint="@color/colorPrimary"
                android:id="@+id/dialog_dis_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="13dp"
            android:id="@+id/dialog_close"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:text="Proche"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/cancelbutton"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
        <Button
            android:textSize="13dp"
            android:id="@+id/dialog_confirm"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:text="Confirmer"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/cancelbutton"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
    </LinearLayout>


</LinearLayout>